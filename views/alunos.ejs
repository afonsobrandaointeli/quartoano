<!DOCTYPE html>
<html lang="pt">
<head>
  <meta charset="UTF-8">
  <title>Gerenciamento de Alunos</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <!-- Navbar (Menu) -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">Gerenciamento</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
              aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <!-- Link para Projetos -->
          <li class="nav-item">
            <a class="nav-link" href="/">Projetos</a>
          </li>
          <!-- Link para Alunos (página atual) -->
          <li class="nav-item">
            <a class="nav-link active" href="/alunos">Alunos</a>
          </li>
          <!-- Link para Criar Novo Projeto -->
          <li class="nav-item">
            <a class="nav-link" href="/projetos/new">Criar Novo Projeto</a>
          </li>
          <!-- Link para Relatório -->
          <li class="nav-item">
            <a class="nav-link" href="/relatorio">Relatório</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Conteúdo Principal -->
  <div class="container mt-4">
    <h1 class="mt-4">Alunos</h1>
    <a href="/alunos/new" class="btn btn-primary mb-3">Novo Aluno</a>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Nome</th>
          <th>E-mail</th>
          <th>Projeto</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        <% alunos.forEach(aluno => { %>
          <tr>
            <td><%= aluno.id %></td>
            <td><%= aluno.nome %></td>
            <td><%= aluno.email %></td>
            <td><%= aluno.projeto ? aluno.projeto.tema : 'Sem Projeto' %></td>
            <td>
              <a href="/alunos/<%= aluno.id %>/edit" class="btn btn-warning btn-sm">Editar</a>
              <form action="/alunos/<%= aluno.id %>/delete" method="POST" style="display:inline-block">
                <button class="btn btn-danger btn-sm" onclick="return confirm('Deseja realmente excluir?')">Excluir</button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
    <a href="/" class="btn btn-secondary">Voltar para Projetos</a>
  </div>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
