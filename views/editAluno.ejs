<!DOCTYPE html>
<html lang="pt">
<head>
  <meta charset="UTF-8">
  <title>Editar Aluno</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <!-- Navbar (Menu) -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">Gerenciamento</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
              aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <!-- Link para a página de Projetos (Home) -->
          <li class="nav-item">
            <a class="nav-link" href="/">Projetos</a>
          </li>
          <!-- Link para a página de Alunos -->
          <li class="nav-item">
            <a class="nav-link" href="/alunos">Alunos</a>
          </li>
          <!-- Link para criar novo projeto -->
          <li class="nav-item">
            <a class="nav-link" href="/projetos/new">Criar Novo Projeto</a>
          </li>
          <!-- Link para o relatório -->
          <li class="nav-item">
            <a class="nav-link" href="/relatorio">Relatório</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Conteúdo Principal -->
  <div class="container mt-4">
    <h1 class="mt-4">Editar Aluno</h1>
    <form action="/alunos/<%= aluno.id %>" method="POST">
      <div class="mb-3">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" class="form-control" id="nome" name="nome" value="<%= aluno.nome %>" required>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">E-mail</label>
        <input type="email" class="form-control" id="email" name="email" value="<%= aluno.email %>" required>
      </div>
      <div class="mb-3">
        <label for="projeto_id" class="form-label">Projeto</label>
        <select class="form-select" id="projeto_id" name="projeto_id" required>
          <option value="">Selecione um Projeto</option>
          <% projetos.forEach(proj => { %>
            <option value="<%= proj.id %>" <%= aluno.projeto_id === proj.id ? 'selected' : '' %>>
              <%= proj.tema %> (ID: <%= proj.id %>)
            </option>
          <% }); %>
        </select>
      </div>
      <button type="submit" class="btn btn-primary">Atualizar</button>
      <a href="/alunos" class="btn btn-secondary">Cancelar</a>
    </form>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
